<header class="bg-blue-500 text-white p-4 md:p-6 fixed w-full top-0 left-0 z-10">
  <nav class="flex justify-between mx-auto container items-center">
    <div class="flex items-center">
      <%= link_to root_path, class: 'flex items-center' do %>
        <span class="text-lg font-bold md:text-3xl"><%= t('header.title') %></span>
        <%= image_tag "logo.jpeg", class: "ml-2 h-6 w-6 md:h-10 md:w-10" %>
      <% end %>
    </div>
    <div class="space-x-6 font-bold hidden md:block">
      <%= link_to t('header.spike_page'), login_path, class: 'text-lg hover:opacity-70 transition-all duration-300' %>
      <%= link_to t('header.search_spike'), explanation_path, class: 'text-lg hover:opacity-70 transition-all duration-300' %>
      <%= link_to t('header.logout'), logout_path, class: 'text-lg hover:opacity-70 transition-all duration-300', data: { turbo_method: :delete } %>
    </div>
</header>